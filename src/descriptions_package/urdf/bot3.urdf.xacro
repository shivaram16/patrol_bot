<?xml version="1.0"?>
<robot name="bot3" xmlns:xacro="http://www.ros.org.wiki/xacro">

    <xacro:include filename = "$(find descriptions_package)/urdf/bot3_ext_info.xacro"/>
    <xacro:include filename = "$(find descriptions_package)/urdf/bot3_control.xacro"/>


    <link name="base_footprint" />

    <link
        name="base_link">
        <inertial>
            <origin
                xyz="0.018226 -2.0781E-05 -0.13643"
                rpy="0 0 0" />
            <mass
                value="10.0" />
            <inertia
                ixx="0.015"
                ixy="0"
                ixz="0"
                iyy="0.0375"
                iyz="0.0"
                izz="0.0275" />
        </inertial>
        <visual>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <mesh
                    filename="package://descriptions_package/meshes/base_link.STL" />
            </geometry>
            <material
                name="aluminium extrusion 6063">
                <color
                    rgba="0.89804 0.91765 0.92941 1" />
            </material>
        </visual>
        <collision>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <mesh
                    filename="package://descriptions_package/meshes/base_link.STL" />
            </geometry>
        </collision>
    </link>
    <joint name="base_joint" type="fixed">
        <origin
            xyz="0 0 0.21095"
            rpy="0 0 0" />
        <parent
            link="base_footprint" />
        <child
            link="base_link" />

    </joint>
    <link
        name="front_left_wheel_link">
        <inertial>
            <origin
                xyz="-4.4509E-07 -0.015766 -3.0123E-08"
                rpy="0 0 0" />
            <mass
                value="0.1" />
            <inertia
                ixx="0.015"
                ixy="0"
                ixz="0"
                iyy="0.0375"
                iyz="0.0"
                izz="0.0275" />
        </inertial>
        <visual>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <mesh
                    filename="package://descriptions_package/meshes/front_left_wheel_link.STL" />
            </geometry>
            <material
                name="">
                <color
                    rgba="0.29804 0.29804 0.29804 1" />
            </material>
        </visual>
        <collision>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <sphere radius="0.03008" />
            </geometry>
        </collision>
    </link>
    <joint
        name="front_left_wheel_joint"
        type="continuous">
        <origin
            xyz="0.20852 0.10925 -0.18091"
            rpy="0 0 0" />
        <parent
            link="base_link" />
        <child
            link="front_left_wheel_link" />
        <axis
            xyz="0 1 0" />
        <limit
            effort="100"
            velocity="10" />
    </joint>
    <link
        name="front_right_wheel_link">
        <inertial>
            <origin
                xyz="2.0522E-07 0.015766 3.9719E-07"
                rpy="0 0 0" />
            <mass
                value="0.1" />
            <inertia
                ixx="0.015"
                ixy="0"
                ixz="0"
                iyy="0.0375"
                iyz="0.0"
                izz="0.0275" />
        </inertial>
        <visual>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <mesh
                    filename="package://descriptions_package/meshes/front_right_wheel_link.STL" />
            </geometry>
            <material
                name="">
                <color
                    rgba="0.29804 0.29804 0.29804 1" />
            </material>
        </visual>
        <collision>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <sphere radius="0.03008" />
            </geometry>
        </collision>
    </link>
    <joint
        name="front_right_wheel_joint"
        type="continuous">
        <origin
            xyz="0.20852 -0.10925 -0.18091"
            rpy="0 0 0" />
        <parent
            link="base_link" />
        <child
            link="front_right_wheel_link" />
        <axis
            xyz="0 1 0" />
        <limit
            effort="100"
            velocity="10" />
    </joint>
    <link
        name="rear_left_wheel_link">
        <inertial>
            <origin
                xyz="-4.4509E-07 -0.015766 -3.0123E-08"
                rpy="0 0 0" />
            <mass
                value="0.1" />
            <inertia
                ixx="0.015"
                ixy="0"
                ixz="0"
                iyy="0.0375"
                iyz="0.0"
                izz="0.0275" />
        </inertial>
        <visual>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <mesh
                    filename="package://descriptions_package/meshes/rear_left_wheel_link.STL" />
            </geometry>
            <material
                name="">
                <color
                    rgba="0.29804 0.29804 0.29804 1" />
            </material>
        </visual>
        <collision>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <sphere radius="0.03008" />
            </geometry>
        </collision>
    </link>
    <joint
        name="rear_left_wheel_joint"
        type="continuous">
        <origin
            xyz="-0.17248 0.10925 -0.18091"
            rpy="0 0 0" />
        <parent
            link="base_link" />
        <child
            link="rear_left_wheel_link" />
        <axis
            xyz="0 1 0" />
        <limit
            effort="100"
            velocity="10" />
    </joint>
    <link
        name="rear_right_wheel_link">
        <inertial>
            <origin
                xyz="2.0522E-07 0.015766 3.9719E-07"
                rpy="0 0 0" />
            <mass
                value="0.1" />
            <inertia
                ixx="0.015"
                ixy="0"
                ixz="0"
                iyy="0.0375"
                iyz="0.0"
                izz="0.0275" />
        </inertial>
        <visual>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <mesh
                    filename="package://descriptions_package/meshes/rear_right_wheel_link.STL" />
            </geometry>
            <material
                name="">
                <color
                    rgba="0.29804 0.29804 0.29804 1" />
            </material>
        </visual>
        <collision>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <sphere radius="0.03008" />
            </geometry>
        </collision>
    </link>
    <joint
        name="rear_right_wheel_joint"
        type="continuous">
        <origin
            xyz="-0.17248 -0.10925 -0.18091"
            rpy="0 0 0" />
        <parent
            link="base_link" />
        <child
            link="rear_right_wheel_link" />
        <axis
            xyz="0 1 0" />
        <limit
            effort="100"
            velocity="10" />
    </joint>

    <gazebo>
        <plugin name="skid_steer_drive" filename="libgazebo_ros_diff_drive.so">

            <num_wheel_pairs>2</num_wheel_pairs>

            <left_joint>front_left_wheel_joint</left_joint>
            <right_joint>front_right_wheel_joint</right_joint>
            <left_joint>rear_left_wheel_joint</left_joint>
            <right_joint>rear_right_wheel_joint</right_joint>

            <wheel_separation>0.200</wheel_separation>
            <wheel_separation>0.200</wheel_separation>

            <wheel_diameter>0.06016</wheel_diameter>
            <wheel_diameter>0.06016</wheel_diameter>

            <max_wheel_torque>100</max_wheel_torque>
            <max_wheel_acceleration>1.0</max_wheel_acceleration>

            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_footprint</robot_base_frame>

            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <publish_wheel_tf>true</publish_wheel_tf>
        </plugin>
    </gazebo>

</robot>